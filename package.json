{
  "name": "tailwindcss-plugin-starter",
  "version": "0.0.0",
  "description": "A short description of the plugin",
  "main": "src/index.js",
  "scripts": {
    "release": "np",
    "test": "c8 jest"
  },
  "license": "MIT",
  "repository": "https://github.com/maizzle/tailwindcss-plugin-starter",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "c8": "^7.11.3",
    "jest": "^28.1.2",
    "np": "^7.6.2",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.1.5"
  },
  "peerDependencies": {
    "tailwindcss": ">=3.0.0"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/jest/customMatchers.js"
    ]
  },
  "c8": {
    "exclude": ["jest/customMatchers.js", "**/*.test.js"]
  },
  "keywords": [
    "tailwindcss"
  ]
}
